  <style>
    /* Define the "system" font family - see https://css-tricks.com/snippets/css/system-font-stack/ */
    @font-face {
      font-family: system;
      font-style: normal;
      font-weight: 300;
      src: local(".SFNSText-Light"), local(".HelveticaNeueDeskInterface-Light"), local(".LucidaGrandeUI"), local("Ubuntu Light"), local("Segoe UI Light"), local("Roboto-Light"), local("DroidSans"), local("Tahoma");
    }

    .flex-container {
      display: flex;
    }

    .flex-wrap {
      flex-wrap: wrap;
    }

    .flex-col {
      flex-direction: column;
    }

    .align-center {
      align-items: center;
    }

    .justify-center {
      justify-content: center;
    }



    html {
      background: #3b4856;
      background-image: radial-gradient(circle, #5eb1f1, #52a7e6, #459ddc, #3794d1, #268ac7, #2881b9, #2978ac, #296f9f, #33658c, #385b7a, #3b5168, #3b4856);
      width: 100%;
      height: 100%;
    }

    body {
      color: #fff;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      font-weight: 300;
      font-size: 16px;
      position: relative;
      width: 100%;
      height: 100%;
      margin: 0;
    }

    code {
      max-width: 100%;
      word-break: break-all;
    }

    img,
    svg {
      max-width: 100%;
      vertical-align: bottom;
      height: auto;
      border: none;
    }

    body p {
      margin: 0;
    }

    main {
      height: 100%;
    }

    .logo {
      padding-bottom: 50px;
      border-bottom: 1px solid #fff;
    }

    h1 {
      margin: 0;
      font-size: 24px;
    }

    .shadow-title {
      background: transparent;
      color: #fff;
      font-size: 2.5vw;
      letter-spacing: 0.3vw;
      line-height: 100px;
      margin: 0;
      text-transform: uppercase;
      /*text-shadow: 1px 1px 0px #D4F4FF, 2px 2px 0px #5EB1F1, 3px 3px 0px #D4F4FF, 4px 4px 0px #5EB1F1, 5px 5px 0px #D4F4FF, 6px 6px 0px #5EB1F1, 7px 7px 0px #D4F4FF, 8px 8px 0px #5EB1F1*/
      text-shadow: 1px 1px 0px #3b4856;
    }

    .card {
      padding: 10px 15px;
      min-width: 290px;
      max-width: 80%;
      min-height: 60px;
      border-radius: 5px;
      background-image: linear-gradient(to right top, rgba(59, 72, 86, 0.7), rgba(51, 53, 64, 0.7), rgba(40, 36, 43, 0.7), rgba(25, 22, 24, 0.7), rgba(0, 0, 0, 0.7));
    }

    .card code {
      font-size: 24px;
    }

    footer {
      position: absolute;
      bottom: 0;
      left: 5px;
      height: 60px;
      width: calc(100% - 10px);
    }

    footer a {
      color: #fff;
      font-weight: bold;
    }

    footer p {
      margin: 0 10px;
    }
  </style>
